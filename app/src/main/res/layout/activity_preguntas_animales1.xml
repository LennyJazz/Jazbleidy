<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreguntasAnimales1"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <TextView
        android:id="@+id/textPregunta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:text="@string/titulo28"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgSerpiente"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="60dp"
            android:src="@drawable/serpiente"/>



        <ImageView
            android:id="@+id/imagedog"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/perro"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageHorse"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="60dp"
            android:src="@drawable/caballo"/>

        <ImageView
            android:id="@+id/imageTortuga"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/tortuga1"/>


    </LinearLayout>

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/titulo45"
            android:textSize="25dp"
            android:textColor="@color/black"/>






</LinearLayout>