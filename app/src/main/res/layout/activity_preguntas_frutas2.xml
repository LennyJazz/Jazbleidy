<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreguntasFrutas2"
    android:orientation="vertical"
    android:background="@color/piel">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:text="@string/titulo23"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgSandiaDos"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="60dp"
            android:src="@drawable/feliz"/>

        <ImageView
            android:id="@+id/ImgPapayaDos"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/papaya2"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgFresaDos"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="60dp"
            android:src="@drawable/fresa"/>

        <ImageView
            android:id="@+id/ImgCerezaDos"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="6dp"
            android:src="@drawable/cerezas"/>


    </LinearLayout>

    <Button
        android:id="@+id/btnSiguienteFrutasDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/titulo45"
        android:textSize="25dp"
        android:textColor="@color/black"/>
</LinearLayout>